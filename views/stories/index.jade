extends ../layout

block content
    #main
        h2.
             #{title}
        table
            tr
                th.
                    Title
                th. 
                    Author
                th.
                    URL
                th.
                    ID
                th.
                th.
                th.
            - each story, i in stories
                tr
                    td
                        = story.title
                    td
                        = story.author
                    td
                        a(href='#{story.url}') 
                            = story.url
                    td
                        = story._id
                    td
                        form(action='/stories/#{story._id}/edit',method='post',enctype='application/x-www-form-urlencoded')
                            input(type='hidden',value='DELETE',name='_method')
                            button(type='submit').
                                Delete
                    td 
                        a(href='/stories/#{story._id}/edit') Edit
                    td
                        a(href='/stories/#{story._id}') Show