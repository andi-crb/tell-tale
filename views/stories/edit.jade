extends ../layout

block content
    #main
        h2.
            Story ID #{story._id}
        form(action='/stories/#{story._id}/edit',method='post',name='updatestory',enctype='application/x-www-form-urlencoded')
            p Title: 
                input#inputTitle(type='text', value='#{story.title}', name='title')
            p Author: 
                input#inputAuthor(type='text', value='#{story.author}', name='author')
            p URL: 
                input#inputURL(type='text', value='#{story.url}', name='url')
            p 
                input(type='hidden',value='PUT',name='_method')
            p 
                button#btnSubmit(type='submit').
                    Update
